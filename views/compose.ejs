<%- include("partials/header") -%>
<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <div class="mb-3">
      <label class="form-label">Title</label>
      <input type="text" name="newContentTitle" class="form-control">
    </div>
    <div class="mb-3">
      <label class="form-label">Post</label>
      <textarea class="form-control" rows="3" name="newContentBody"></textarea>
    </div>
  </div>

  <button class="btn btn-primary" type="submit" name="newContentButton">Publish</button>
</form>
<%- include("partials/footer") -%>
